<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ระบบจองห้องประชุม</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f4f7f9; padding-top: 50px; }
        .booking-card { max-width: 500px; margin: auto; background: white; padding: 30px; border-radius: 15px; box-shadow: 0 10px 25px rgba(0,0,0,0.1); }
    </style>
</head>
<body>

<div class="container">
    <div class="booking-card">
        <h2 class="text-center mb-4">จองห้องประชุม</h2>
        <form id="bookingForm">
            <div class="mb-3">
                <label class="form-label">ชื่อผู้จอง</label>
                <input type="text" id="name" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">ห้อง</label>
                <select id="room" class="form-select">
                    <option value="Room A">Room A</option>
                    <option value="Room B">Room B</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">วันที่จอง</label>
                <input type="date" id="bookingDate" class="form-control" required>
            </div>
            <div class="row">
                <div class="col-6 mb-3">
                    <label class="form-label">เริ่ม</label>
                    <input type="time" id="startTime" class="form-control" required>
                </div>
                <div class="col-6 mb-3">
                    <label class="form-label">สิ้นสุด</label>
                    <input type="time" id="endTime" class="form-control" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary w-100" id="submitBtn">ยืนยันการจอง</button>
        </form>
        <div id="status" class="mt-3 text-center"></div>
    </div>
</div>

<script>
    // แทนที่ URL นี้ด้วย Web App URL ที่ได้จาก Google Apps Script
    const scriptURL = 'ใส่_WEB_APP_URL_ของคุณที่นี่';

    document.getElementById('bookingForm').addEventListener('submit', e => {
        e.preventDefault();
        const btn = document.getElementById('submitBtn');
        const status = document.getElementById('status');
        
        btn.disabled = true;
        status.innerText = "กำลังส่งข้อมูล...";

        const data = {
            name: document.getElementById('name').value,
            room: document.getElementById('room').value,
            bookingDate: document.getElementById('bookingDate').value,
            startTime: document.getElementById('startTime').value,
            endTime: document.getElementById('endTime').value
        };

        fetch(scriptURL, {
            method: 'POST',
            body: JSON.stringify(data)
        })
        .then(response => {
            status.innerHTML = "<span class='text-success'>✅ บันทึกข้อมูลสำเร็จ!</span>";
            document.getElementById('bookingForm').reset();
            btn.disabled = false;
        })
        .catch(error => {
            status.innerHTML = "<span class='text-danger'>❌ เกิดข้อผิดพลาด</span>";
            console.error('Error!', error.message);
            btn.disabled = false;
        });
    });
</script>

</body>
</html>
